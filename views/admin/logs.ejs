<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>API 日志 - API 中转服务</title>
    <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="/css/modern-dark.css" rel="stylesheet">
    <style>
        .main-wrapper { display: flex; min-height: 100vh; }
        .sidebar { width: 260px; flex-shrink: 0; z-index: 100; }
        .content-area { flex-grow: 1; padding: 2rem; overflow-y: auto; }
        .url-cell { max-width: 300px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap; }
        .method-badge { min-width: 60px; text-align: center; }
    </style>
</head>
<body>
    <div class="main-wrapper">
        <aside class="sidebar modern-sidebar p-3 d-flex flex-column">
            <div class="p-3 mb-4 d-flex align-items-center">
                <div class="bg-primary bg-opacity-10 p-2 rounded-3 me-3">
                    <i class="bi bi-cpu-fill text-primary"></i>
                </div>
                <h5 class="mb-0 fw-bold glow-text">管理后台</h5>
            </div>
            <nav class="nav flex-column flex-grow-1">
                <a class="nav-link" href="/admin/dashboard"><i class="bi bi-speedometer2 me-2"></i> 仪表板</a>
                <a class="nav-link" href="/admin/feedback"><i class="bi bi-chat-square-dots me-2"></i> 反馈管理</a>
                <a class="nav-link" href="/admin/reports"><i class="bi bi-flag me-2"></i> 举报管理</a>
                <a class="nav-link" href="/admin/blacklist"><i class="bi bi-shield-slash me-2"></i> 黑名单管理</a>
                <a class="nav-link" href="/admin/whitelist"><i class="bi bi-shield-check me-2"></i> 白名单管理</a>
                <a class="nav-link active" href="/admin/logs"><i class="bi bi-terminal me-2"></i> API 日志</a>
            </nav>
            <div class="mt-auto pt-3 border-top border-secondary border-opacity-25">
                <a class="nav-link text-danger" href="#" id="logoutBtn"><i class="bi bi-power me-2"></i> 退出登录</a>
            </div>
        </aside>

        <main class="content-area">
            <header class="d-flex justify-content-between align-items-center mb-5">
                <div>
                    <h2 class="fw-bold mb-1">API 日志</h2>
                    <p class="text-secondary mb-0">监控实时接口中转调用情况</p>
                </div>
                <div class="d-flex gap-2">
                    <a href="/admin/logs/export" class="btn btn-outline-light btn-modern">
                        <i class="bi bi-download me-1"></i> 导出 CSV
                    </a>
                    <button class="btn btn-outline-danger btn-modern" onclick="clearLogs()">
                        <i class="bi bi-trash me-1"></i> 清空日志
                    </button>
                    <button class="btn btn-primary-modern btn-modern" onclick="loadLogs()">
                        <i class="bi bi-arrow-clockwise me-1"></i> 刷新
                    </button>
                </div>
            </header>

            <div class="glass-card overflow-hidden">
                <div class="table-responsive">
                    <table class="table modern-table mb-0">
                        <thead>
                            <tr>
                                <th>时间</th>
                                <th>方法</th>
                                <th>目标 URL</th>
                                <th>来源 IP</th>
                                <th>状态</th>
                                <th>耗时</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody id="logsTableBody">
                            <tr>
                                <td colspan="7" class="text-center py-5">
                                    <div class="spinner-border text-primary" role="status"></div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <!-- 分页 -->
                <div class="p-3 border-top border-secondary border-opacity-10 d-flex justify-content-between align-items-center">
                    <div class="small text-secondary" id="paginationInfo">显示 0 - 0 条，共 0 条</div>
                    <nav>
                        <ul class="pagination pagination-sm mb-0" id="pagination">
                        </ul>
                    </nav>
                </div>
            </div>
        </main>
    </div>

    <!-- 日志详情模态框 -->
    <div class="modal fade" id="logModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content glass-card p-2" style="background: var(--sidebar-bg);">
                <div class="modal-header border-0">
                    <h5 class="modal-title fw-bold">调用详情</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="row g-4">
                        <div class="col-md-12">
                            <label class="text-secondary small mb-1">目标 URL</label>
                            <div class="p-2 rounded bg-dark bg-opacity-50 border border-secondary border-opacity-25 word-break-all text-info" id="detailUrl"></div>
                        </div>
                        <div class="col-md-4">
                            <label class="text-secondary small mb-1">请求方法</label>
                            <p id="detailMethod" class="fw-bold">-</p>
                        </div>
                        <div class="col-md-4">
                            <label class="text-secondary small mb-1">响应状态</label>
                            <p id="detailStatus" class="fw-bold">-</p>
                        </div>
                        <div class="col-md-4">
                            <label class="text-secondary small mb-1">响应耗时</label>
                            <p id="detailTime" class="fw-bold">-</p>
                        </div>
                        <div class="col-md-6">
                            <label class="text-secondary small mb-1">客户端 IP</label>
                            <p id="detailIp" class="fw-bold">-</p>
                        </div>
                        <div class="col-md-6">
                            <label class="text-secondary small mb-1">记录时间</label>
                            <p id="detailDate" class="fw-bold">-</p>
                        </div>
                        <div class="col-md-12">
                            <label class="text-secondary small mb-1">User Agent</label>
                            <div class="p-2 rounded bg-dark bg-opacity-50 border border-secondary border-opacity-25 small text-secondary" id="detailUA"></div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer border-0">
                    <button type="button" class="btn btn-outline-light btn-modern w-100" data-bs-dismiss="modal">关闭</button>
                </div>
            </div>
        </div>
    </div>

    <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script>
        let currentPage = 1;
        const logModal = new bootstrap.Modal(document.getElementById('logModal'));

        document.addEventListener('DOMContentLoaded', () => loadLogs(1));

        async function loadLogs(page) {
            currentPage = page;
            try {
                const response = await fetch(`/admin/logs/data?page=${page}&limit=20`);
                const result = await response.json();
                const tbody = document.getElementById('logsTableBody');

                if (result.success && result.data.length > 0) {
                    tbody.innerHTML = result.data.map(log => `
                        <tr>
                            <td class="small text-secondary">${new Date(log.created_at).toLocaleTimeString()}</td>
                            <td><span class="badge bg-primary bg-opacity-10 text-primary method-badge">${log.method}</span></td>
                            <td><div class="url-cell small">${log.target_url}</div></td>
                            <td class="small text-secondary">${log.ip_address}</td>
                            <td>
                                <span class="badge badge-modern ${getStatusClass(log.response_status)}">
                                    ${log.response_status}
                                </span>
                            </td>
                            <td class="small">${log.response_time}ms</td>
                            <td>
                                <button class="btn btn-sm btn-outline-info btn-modern" onclick="showDetail(${log.id})">
                                    <i class="bi bi-info-circle"></i>
                                </button>
                            </td>
                        </tr>
                    `).join('');
                    updatePagination(result.pagination);
                } else {
                    tbody.innerHTML = '<tr><td colspan="7" class="text-center py-5 text-secondary">暂无日志记录</td></tr>';
                }
            } catch (error) {
                console.error('加载失败:', error);
            }
        }

        function getStatusClass(status) {
            if (status >= 200 && status < 300) return 'bg-success-subtle';
            if (status >= 400 && status < 500) return 'bg-warning-subtle';
            if (status >= 500) return 'bg-danger-subtle';
            return 'bg-secondary-subtle';
        }

        function updatePagination(p) {
            const info = document.getElementById('paginationInfo');
            const start = (p.page - 1) * p.limit + 1;
            const end = Math.min(p.page * p.limit, p.total);
            info.textContent = `显示 ${start} - ${end} 条，共 ${p.total} 条`;

            const nav = document.getElementById('pagination');
            let html = '';
            
            // 简单分页逻辑
            if (p.page > 1) html += `<li class="page-item"><a class="page-link bg-transparent border-secondary border-opacity-25" href="#" onclick="loadLogs(${p.page - 1})">上一页</a></li>`;

            for (let i = Math.max(1, p.page - 2); i <= Math.min(p.pages, p.page + 2); i++) {
                html += `<li class="page-item ${i === p.page ? 'active' : ''}">
                    <a class="page-link ${i === p.page ? 'bg-primary border-primary' : 'bg-transparent border-secondary border-opacity-25'}" href="#" onclick="loadLogs(${i})">${i}</a>
                </li>`;
            }

            if (p.page < p.pages) html += `<li class="page-item"><a class="page-link bg-transparent border-secondary border-opacity-25" href="#" onclick="loadLogs(${p.page + 1})">下一页</a></li>`;

            nav.innerHTML = html;
        }

        async function showDetail(id) {
            try {
                const response = await fetch(`/admin/logs/${id}`);
                const result = await response.json();
                if (result.success) {
                    const log = result.data;
                    document.getElementById('detailUrl').textContent = log.target_url;
                    document.getElementById('detailMethod').textContent = log.method;
                    document.getElementById('detailStatus').textContent = log.response_status;
                    document.getElementById('detailTime').textContent = log.response_time + 'ms';
                    document.getElementById('detailIp').textContent = log.ip_address;
                    document.getElementById('detailDate').textContent = new Date(log.created_at).toLocaleString();
                    document.getElementById('detailUA').textContent = log.user_agent;
                    logModal.show();
                }
            } catch (error) {
                console.error('获取详情失败:', error);
            }
        }

        async function clearLogs() {
            if (!confirm('确定要清空所有 API 日志吗？此操作不可恢复。')) return;
            try {
                const response = await fetch('/admin/logs/clear', { method: 'DELETE' });
                const result = await response.json();
                if (result.success) {
                    loadLogs(1);
                }
            } catch (error) {
                console.error('清空失败:', error);
            }
        }

        document.getElementById('logoutBtn').addEventListener('click', async (e) => {
            e.preventDefault();
            if (confirm('确定要退出登录吗？')) {
                await fetch('/admin/logout', { method: 'POST' });
                window.location.href = '/admin/login';
            }
        });
    </script>
</body>
</html>
