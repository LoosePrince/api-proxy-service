<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>举报管理 - API 中转服务</title>
    <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="/css/modern-dark.css" rel="stylesheet">
    <style>
        .main-wrapper { display: flex; min-height: 100vh; }
        .sidebar { width: 260px; flex-shrink: 0; z-index: 100; }
        .content-area { flex-grow: 1; padding: 2rem; overflow-y: auto; }
        .url-preview { max-width: 250px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap; }
    </style>
</head>
<body>
    <div class="main-wrapper">
        <aside class="sidebar modern-sidebar p-3 d-flex flex-column">
            <div class="p-3 mb-4 d-flex align-items-center">
                <div class="bg-primary bg-opacity-10 p-2 rounded-3 me-3">
                    <i class="bi bi-cpu-fill text-primary"></i>
                </div>
                <h5 class="mb-0 fw-bold glow-text">管理后台</h5>
            </div>
            <nav class="nav flex-column flex-grow-1">
                <a class="nav-link" href="/admin/dashboard"><i class="bi bi-speedometer2 me-2"></i> 仪表板</a>
                <a class="nav-link" href="/admin/feedback"><i class="bi bi-chat-square-dots me-2"></i> 反馈管理</a>
                <a class="nav-link active" href="/admin/reports"><i class="bi bi-flag me-2"></i> 举报管理</a>
                <a class="nav-link" href="/admin/blacklist"><i class="bi bi-shield-slash me-2"></i> 黑名单管理</a>
                <a class="nav-link" href="/admin/whitelist"><i class="bi bi-shield-check me-2"></i> 白名单管理</a>
                <a class="nav-link" href="/admin/logs"><i class="bi bi-terminal me-2"></i> API 日志</a>
            </nav>
            <div class="mt-auto pt-3 border-top border-secondary border-opacity-25">
                <a class="nav-link text-danger" href="#" id="logoutBtn"><i class="bi bi-power me-2"></i> 退出登录</a>
            </div>
        </aside>

        <main class="content-area">
            <header class="d-flex justify-content-between align-items-center mb-5">
                <div>
                    <h2 class="fw-bold mb-1">举报管理</h2>
                    <p class="text-secondary mb-0">处理违规 URL 举报</p>
                </div>
                <div class="d-flex gap-2">
                    <a href="/admin/reports/export" class="btn btn-outline-light btn-modern">
                        <i class="bi bi-download me-1"></i> 导出 CSV
                    </a>
                    <button class="btn btn-primary-modern btn-modern" onclick="loadReports()">
                        <i class="bi bi-arrow-clockwise me-1"></i> 刷新列表
                    </button>
                </div>
            </header>

            <div class="glass-card overflow-hidden">
                <div class="table-responsive">
                    <table class="table modern-table mb-0">
                        <thead>
                            <tr>
                                <th>时间</th>
                                <th>举报原因</th>
                                <th>目标 URL</th>
                                <th>联系人</th>
                                <th>状态</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody id="reportsTableBody">
                            <tr>
                                <td colspan="6" class="text-center py-5">
                                    <div class="spinner-border text-primary" role="status"></div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </main>
    </div>

    <!-- 举报详情模态框 -->
    <div class="modal fade" id="detailModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content glass-card p-2" style="background: var(--sidebar-bg);">
                <div class="modal-header border-0">
                    <h5 class="modal-title fw-bold">举报详情</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-4">
                        <label class="text-secondary small mb-1">目标 URL</label>
                        <div class="p-2 rounded bg-dark bg-opacity-50 border border-secondary border-opacity-25 word-break-all" id="modalTargetUrl"></div>
                    </div>
                    <div class="mb-4">
                        <label class="text-secondary small mb-1">详情描述</label>
                        <div class="p-3 rounded-3 bg-dark bg-opacity-50 border border-secondary border-opacity-25" id="modalDescription"></div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="text-secondary small mb-1">举报原因</label>
                            <p id="modalReason" class="fw-bold">-</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-secondary small mb-1">举报者邮箱</label>
                            <p id="modalEmail" class="fw-bold">-</p>
                        </div>
                    </div>
                </div>
                <div class="modal-footer border-0">
                    <button type="button" class="btn btn-outline-light btn-modern" data-bs-dismiss="modal">关闭</button>
                    <button type="button" class="btn btn-warning btn-modern" id="addToBlacklistBtn">
                        <i class="bi bi-shield-lock me-1"></i> 加入黑名单
                    </button>
                    <button type="button" class="btn btn-primary-modern btn-modern" id="markProcessedBtn">标记为已处理</button>
                </div>
            </div>
        </div>
    </div>

    <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script>
        const detailModal = new bootstrap.Modal(document.getElementById('detailModal'));
        const reasonMap = {
            'abuse': '资源滥用',
            'spam': '垃圾信息',
            'content': '违规内容',
            'privacy': '侵犯隐私',
            'other': '其他'
        };

        document.addEventListener('DOMContentLoaded', loadReports);

        async function loadReports() {
            try {
                const response = await fetch('/admin/reports/data');
                const result = await response.json();
                const tbody = document.getElementById('reportsTableBody');

                if (result.success && result.data.length > 0) {
                    tbody.innerHTML = result.data.map(item => `
                        <tr>
                            <td class="small text-secondary">${new Date(item.created_at).toLocaleString()}</td>
                            <td><span class="badge bg-danger-subtle badge-modern">${reasonMap[item.reason] || item.reason}</span></td>
                            <td><div class="url-preview small text-info">${item.target_url}</div></td>
                            <td class="small">${item.reporter_email || '-'}</td>
                            <td>
                                <span class="badge badge-modern ${item.status === 'processed' ? 'bg-success-subtle' : 'bg-warning-subtle'}">
                                    ${item.status === 'processed' ? '已处理' : '待处理'}
                                </span>
                            </td>
                            <td>
                                <button class="btn btn-sm btn-outline-primary btn-modern" onclick="showDetail(${item.id})">
                                    <i class="bi bi-eye"></i>
                                </button>
                                <button class="btn btn-sm btn-outline-danger btn-modern ms-1" onclick="deleteReport(${item.id})">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </td>
                        </tr>
                    `).join('');
                } else {
                    tbody.innerHTML = '<tr><td colspan="6" class="text-center py-5 text-secondary">暂无举报记录</td></tr>';
                }
            } catch (error) {
                console.error('加载失败:', error);
            }
        }

        async function showDetail(id) {
            try {
                const response = await fetch(`/admin/reports/${id}`);
                const result = await response.json();
                if (result.success) {
                    const item = result.data;
                    document.getElementById('modalTargetUrl').textContent = item.target_url;
                    document.getElementById('modalDescription').textContent = item.description || '无详细说明';
                    document.getElementById('modalReason').textContent = reasonMap[item.reason] || item.reason;
                    document.getElementById('modalEmail').textContent = item.reporter_email || '-';

                    const processBtn = document.getElementById('markProcessedBtn');
                    const blacklistBtn = document.getElementById('addToBlacklistBtn');

                    if (item.status === 'processed') {
                        processBtn.style.display = 'none';
                    } else {
                        processBtn.style.display = 'block';
                        processBtn.onclick = () => markProcessed(id);
                    }

                    blacklistBtn.onclick = () => addToBlacklist(id);
                    detailModal.show();
                }
            } catch (error) {
                console.error('获取详情失败:', error);
            }
        }

        async function markProcessed(id) {
            try {
                const response = await fetch(`/admin/reports/${id}/processed`, { method: 'PUT' });
                const result = await response.json();
                if (result.success) {
                    detailModal.hide();
                    loadReports();
                }
            } catch (error) {
                console.error('更新失败:', error);
            }
        }

        async function addToBlacklist(id) {
            if (!confirm('确定要将该请求涉及的域名加入黑名单吗？')) return;
            try {
                const response = await fetch(`/admin/reports/${id}/blacklist`, { method: 'POST' });
                const result = await response.json();
                alert(result.message || (result.success ? '成功加入黑名单' : '操作失败'));
                if (result.success) {
                    detailModal.hide();
                    loadReports();
                }
            } catch (error) {
                console.error('加入黑名单失败:', error);
            }
        }

        async function deleteReport(id) {
            if (!confirm('确定要删除这条举报吗？')) return;
            try {
                const response = await fetch(`/admin/reports/${id}`, { method: 'DELETE' });
                const result = await response.json();
                if (result.success) {
                    loadReports();
                }
            } catch (error) {
                console.error('删除失败:', error);
            }
        }

        document.getElementById('logoutBtn').addEventListener('click', async (e) => {
            e.preventDefault();
            if (confirm('确定要退出登录吗？')) {
                await fetch('/admin/logout', { method: 'POST' });
                window.location.href = '/admin/login';
            }
        });
    </script>
</body>
</html>
