<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>管理仪表板 - API 中转服务</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        .sidebar {
            min-height: 100vh;
            background: linear-gradient(180deg, #667eea 0%, #764ba2 100%);
        }
        .sidebar .nav-link {
            color: rgba(255, 255, 255, 0.8);
            border-radius: 8px;
            margin: 4px 0;
            transition: all 0.3s ease;
        }
        .sidebar .nav-link:hover,
        .sidebar .nav-link.active {
            background: rgba(255, 255, 255, 0.2);
            color: white;
        }
        .main-content {
            background: #f8f9fa;
            min-height: 100vh;
        }
        .stats-card {
            background: white;
            border-radius: 15px;
            padding: 1.5rem;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
            transition: transform 0.3s ease;
        }
        .stats-card:hover {
            transform: translateY(-5px);
        }
        .stats-icon {
            width: 60px;
            height: 60px;
            border-radius: 15px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            color: white;
        }
        .chart-container {
            background: white;
            border-radius: 15px;
            padding: 1.5rem;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
            margin-bottom: 2rem;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- 侧边栏 -->
            <div class="col-md-3 col-lg-2 px-0">
                <div class="sidebar p-3">
                    <div class="text-center mb-4">
                        <h4 class="text-white mb-0">
                            <i class="bi bi-shield-check"></i>
                            管理后台
                        </h4>
                        <small class="text-white-50">API 中转服务</small>
                    </div>
                    
                    <nav class="nav nav-pills flex-column">
                        <a class="nav-link active" href="#" data-section="dashboard">
                            <i class="bi bi-speedometer2 me-2"></i>
                            仪表板
                        </a>
                        <a class="nav-link" href="/admin/feedback">
                            <i class="bi bi-chat-left-text me-2"></i>
                            反馈管理
                        </a>
                        <a class="nav-link" href="/admin/reports">
                            <i class="bi bi-flag me-2"></i>
                            举报管理
                        </a>
                        <a class="nav-link" href="/admin/blacklist">
                            <i class="bi bi-shield-x me-2"></i>
                            黑名单管理
                        </a>
                        <a class="nav-link" href="/admin/logs">
                            <i class="bi bi-list-ul me-2"></i>
                            API 日志
                        </a>
                        <a class="nav-link" href="#" data-section="system">
                            <i class="bi bi-gear me-2"></i>
                            系统信息
                        </a>
                        <hr class="text-white-50">
                        <a class="nav-link" href="/" target="_blank">
                            <i class="bi bi-house me-2"></i>
                            返回首页
                        </a>
                        <a class="nav-link" href="#" id="logoutBtn">
                            <i class="bi bi-box-arrow-right me-2"></i>
                            退出登录
                        </a>
                    </nav>
                </div>
            </div>

            <!-- 主内容区 -->
            <div class="col-md-9 col-lg-10 px-0">
                <div class="main-content p-4">
                    <!-- 仪表板部分 -->
                    <div id="dashboard-section">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <h2>管理仪表板</h2>
                            <button class="btn btn-primary" onclick="refreshData()">
                                <i class="bi bi-arrow-clockwise"></i>
                                刷新数据
                            </button>
                        </div>

                        <!-- 统计卡片 -->
                        <div class="row mb-4">
                            <div class="col-lg-3 col-md-6 mb-3">
                                <div class="stats-card">
                                    <div class="d-flex align-items-center">
                                        <div class="stats-icon bg-primary">
                                            <i class="bi bi-activity"></i>
                                        </div>
                                        <div class="ms-3">
                                            <h3 class="mb-0" id="totalApiCalls">-</h3>
                                            <p class="text-muted mb-0">总API调用</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-6 mb-3">
                                <div class="stats-card">
                                    <div class="d-flex align-items-center">
                                        <div class="stats-icon bg-success">
                                            <i class="bi bi-clock"></i>
                                        </div>
                                        <div class="ms-3">
                                            <h3 class="mb-0" id="todayApiCalls">-</h3>
                                            <p class="text-muted mb-0">今日调用</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-6 mb-3">
                                <div class="stats-card">
                                    <div class="d-flex align-items-center">
                                        <div class="stats-icon bg-info">
                                            <i class="bi bi-chat-dots"></i>
                                        </div>
                                        <div class="ms-3">
                                            <h3 class="mb-0" id="totalFeedback">-</h3>
                                            <p class="text-muted mb-0">用户反馈</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-6 mb-3">
                                <div class="stats-card">
                                    <div class="d-flex align-items-center">
                                        <div class="stats-icon bg-warning">
                                            <i class="bi bi-flag"></i>
                                        </div>
                                        <div class="ms-3">
                                            <h3 class="mb-0" id="totalReports">-</h3>
                                            <p class="text-muted mb-0">举报数量</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- 图表区域 -->
                        <div class="row">
                            <div class="col-lg-8">
                                <div class="chart-container">
                                    <h5 class="mb-3">最近7天 API 调用趋势</h5>
                                    <canvas id="apiTrendChart" width="400" height="200"></canvas>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="chart-container">
                                    <h5 class="mb-3">响应状态分布</h5>
                                    <canvas id="statusChart" width="300" height="300"></canvas>
                                </div>
                            </div>
                        </div>

                        <!-- 系统状态 -->
                        <div class="row">
                            <div class="col-12">
                                <div class="chart-container">
                                    <h5 class="mb-3">系统状态</h5>
                                    <div class="row">
                                        <div class="col-md-4">
                                            <p><strong>平均响应时间:</strong> <span id="avgResponseTime">-</span>ms</p>
                                            <p><strong>服务运行时间:</strong> <span id="uptime">-</span></p>
                                        </div>
                                        <div class="col-md-4">
                                            <p><strong>今日反馈:</strong> <span id="todayFeedback">-</span></p>
                                            <p><strong>今日举报:</strong> <span id="todayReports">-</span></p>
                                        </div>
                                        <div class="col-md-4">
                                            <p><strong>最后更新:</strong> <span id="lastUpdate">-</span></p>
                                            <p><strong>系统状态:</strong> <span class="badge bg-success">正常运行</span></p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- 其他部分的占位符 -->
                    <div id="feedback-section" style="display: none;">
                        <h2>反馈管理</h2>
                        <p>反馈管理功能开发中...</p>
                    </div>

                    <div id="reports-section" style="display: none;">
                        <h2>举报管理</h2>
                        <p>举报管理功能开发中...</p>
                    </div>

                    <div id="logs-section" style="display: none;">
                        <h2>API 日志</h2>
                        <p>API日志功能开发中...</p>
                    </div>

                    <div id="system-section" style="display: none;">
                        <h2>系统信息</h2>
                        <p>系统信息功能开发中...</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        let apiTrendChart, statusChart;

        // 初始化页面
        document.addEventListener('DOMContentLoaded', function() {
            initCharts();
            loadDashboardData();
            initNavigation();
        });

        // 导航功能
        function initNavigation() {
            const navLinks = document.querySelectorAll('.sidebar .nav-link[data-section]');
            const sections = document.querySelectorAll('[id$="-section"]');
            
            navLinks.forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    
                    // 更新活动状态
                    navLinks.forEach(l => l.classList.remove('active'));
                    this.classList.add('active');
                    
                    // 显示对应部分
                    const sectionId = this.dataset.section + '-section';
                    sections.forEach(section => {
                        section.style.display = section.id === sectionId ? 'block' : 'none';
                    });
                });
            });

            // 退出登录
            document.getElementById('logoutBtn').addEventListener('click', function(e) {
                e.preventDefault();
                if (confirm('确定要退出登录吗？')) {
                    logout();
                }
            });
        }

        // 初始化图表
        function initCharts() {
            // 销毁现有图表（如果存在）
            if (apiTrendChart) {
                apiTrendChart.destroy();
            }
            if (statusChart) {
                statusChart.destroy();
            }

            // API趋势图表
            const apiTrendCtx = document.getElementById('apiTrendChart').getContext('2d');
            apiTrendChart = new Chart(apiTrendCtx, {
                type: 'line',
                data: {
                    labels: [],
                    datasets: [{
                        label: 'API 调用次数',
                        data: [],
                        borderColor: 'rgb(102, 126, 234)',
                        backgroundColor: 'rgba(102, 126, 234, 0.1)',
                        tension: 0.4,
                        fill: true
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    },
                    plugins: {
                        legend: {
                            display: true,
                            position: 'top'
                        }
                    }
                }
            });

            // 状态分布图表
            const statusCtx = document.getElementById('statusChart').getContext('2d');
            statusChart = new Chart(statusCtx, {
                type: 'doughnut',
                data: {
                    labels: ['成功', '客户端错误', '服务器错误', '其他'],
                    datasets: [{
                        data: [0, 0, 0, 0],
                        backgroundColor: [
                            '#28a745',
                            '#ffc107',
                            '#dc3545',
                            '#6c757d'
                        ],
                        borderWidth: 2,
                        borderColor: '#fff'
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    plugins: {
                        legend: {
                            display: true,
                            position: 'bottom'
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    const label = context.label || '';
                                    const value = context.parsed || 0;
                                    return label + ': ' + value + '个请求';
                                }
                            }
                        }
                    }
                }
            });
        }

        // 加载仪表板数据
        async function loadDashboardData() {
            try {
                const response = await fetch('/admin/dashboard/data');
                const result = await response.json();
                
                if (result.success) {
                    console.log('仪表板数据:', result.data);
                    updateStats(result.data);
                    updateCharts(result.data);
                } else {
                    console.error('获取数据失败:', result.error);
                }
            } catch (error) {
                console.error('加载仪表板数据失败:', error);
            }
        }

        // 更新统计数据
        function updateStats(data) {
            document.getElementById('totalApiCalls').textContent = data.totalApiCalls || 0;
            document.getElementById('todayApiCalls').textContent = data.todayApiCalls || 0;
            document.getElementById('totalFeedback').textContent = data.totalFeedback || 0;
            document.getElementById('totalReports').textContent = data.totalReports || 0;
            document.getElementById('avgResponseTime').textContent = data.avgResponseTime || 0;
            document.getElementById('todayFeedback').textContent = data.todayFeedback || 0;
            document.getElementById('todayReports').textContent = data.todayReports || 0;
            document.getElementById('lastUpdate').textContent = new Date().toLocaleString('zh-CN');
        }

        // 更新图表
        function updateCharts(data) {
            // 更新趋势图表
            if (data.weeklyTrend && Array.isArray(data.weeklyTrend)) {
                const labels = data.weeklyTrend.map(item => item.date);
                const values = data.weeklyTrend.map(item => item.count);
                
                // 清空现有数据并替换
                apiTrendChart.data.labels = labels;
                apiTrendChart.data.datasets[0].data = values;
                apiTrendChart.update();
            }

            // 更新状态图表
            if (data.statusStats && Array.isArray(data.statusStats)) {
                const statusData = [0, 0, 0, 0]; // 成功、客户端错误、服务器错误、其他
                
                data.statusStats.forEach(stat => {
                    switch(stat.status_group) {
                        case 'success':
                            statusData[0] = stat.count;
                            break;
                        case 'client_error':
                            statusData[1] = stat.count;
                            break;
                        case 'server_error':
                            statusData[2] = stat.count;
                            break;
                        default:
                            statusData[3] = stat.count;
                    }
                });
                
                // 完全替换数据而不是添加
                statusChart.data.datasets[0].data = statusData;
                statusChart.update('none'); // 使用 'none' 动画模式避免重复动画
            } else {
                // 如果没有数据，设置为默认值
                statusChart.data.datasets[0].data = [0, 0, 0, 0];
                statusChart.update('none');
            }
        }

        // 刷新数据
        function refreshData() {
            console.log('刷新仪表板数据...');
            loadDashboardData();
        }

        // 退出登录
        async function logout() {
            try {
                await fetch('/admin/logout', { method: 'POST' });
                window.location.href = '/admin/login';
            } catch (error) {
                console.error('退出登录失败:', error);
            }
        }
    </script>
</body>
</html> 